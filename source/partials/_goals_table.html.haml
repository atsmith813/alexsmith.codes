-# TODO format est_completion in goals.json to be a parseable and therefore
-# sortable date
- if goals
  %table.table
    %thead
      %tr
        %th Goal
        %th Progress
        %th Est. completion
    %tbody
      - goals.each do |goal|
        %tr
          %td
            = goal.text
          %td
            .progress
              .progress-bar{ 'aria-valuemax' => '100', 'aria-valuemin' => '0', 'aria-valuenow' => "#{goal.progress}", role: 'progressbar', style: "width: #{goal.progress}%" }
                .progress-label.d-none.d-md-block
                  = "#{goal.progress}%"
          %td
            = goal.est_completion
